<%= javascript_pack_tag 'index', 'data-turbolinks-track': 'reload' %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mt-4">To Do List</h1>
       <div class="user-input row mt-3 justify-content-center">
        <div class="col-8 task-bar">
          <input type="text" class="form-control form" id="newTaskInput" placeholder="Enter your task...">
        </div>
        <div class="col-4 remove">
          <button class="btn btn-primary" id="addTaskButton">Add Task</button>
        </div>
      </div>
      <div class="row" id="tasks">
      </div>
    </div>
  </div>
</div>